<div class="row forums mt-3">
  <div class="col-6 ml-5">
    <section class="create-post">
      <h2 class="h3 ml-3">Create New Post</h2>

      <form class="new-post-form col-8">
        <div class="mt-3">
          <label for="post-title">Title</label>
          <input type="text" class="form-control" id="post-title" name="post-title" />
        </div>
        <div class="mt-3">
          <label for="post-url">Description</label>
          <input class="form-control" id="post-url" name="post-content"/>
        </div>
        <button type="submit" class="btn btn-outline-light mt-3 mb-5">Submit</button>
      </form>
    </section>
  </div>
</div>

